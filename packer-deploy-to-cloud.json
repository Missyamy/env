{
  "variables": {
    "org_name": "jhwohlgemuth",
    "ubuntu_version": "trusty",
    "version": "5.0.0",
    "cloud_token": "{{ env `ATLAS_TOKEN` }}",
    "iso_name": "ubuntu-14.04.5-server-amd64.iso",
    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.5-server-amd64.iso",
    "checksum": "dd54dc8cfc2a655053d19813c2f9aa9f",
    "ssh_name": "vagrant",
    "ssh_pass": "vagrant",
    "hostname": "home",
    "disk_size": "190782",
    "update": "yes"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "file=/floppy/preseed-trusty.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ user `hostname` }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "passwd/user-fullname={{ user `ssh_name` }} ",
        "passwd/user-password={{ user `ssh_pass` }} ",
        "passwd/user-password-again={{ user `ssh_pass` }} ",
        "passwd/username={{ user `ssh_name` }} ",
        "initrd=/install/initrd.gz -- <enter>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": ["http/preseed-trusty.cfg"],
      "guest_os_type": "Ubuntu_64",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "hard_drive_interface": "sata",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "{{ user `checksum` }}",
      "iso_checksum_type": "md5",
      "iso_urls": [
        "iso/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_username": "{{ user `ssh_name` }}",
      "ssh_password": "{{ user `ssh_pass` }}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '{{ user `ssh_pass` }}'|sudo -S shutdown -P now",
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--cpus", "1"],
        ["modifyvm", "{{ .Name }}", "--memory", "512"]
      ],
      "vm_name": "ubuntu-1404-desktop"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "share/functions.sh",
      "destination": "functions.sh"
    },
    {
      "type": "file",
      "source": "share/snippets.cson",
      "destination": "snippets.cson"
    },
    {
      "type": "file",
      "source": "share/profiles.clj",
      "destination": "profiles.clj"
    },
    {
      "type": "file",
      "source": "share/setup.sh",
      "destination": "setup.sh"
    },
    {
      "type": "shell",
      "expect_disconnect": true,
      "environment_vars": [
        "UPDATE={{ user `update` }}",
        "ORG_NAME={{ user `org_name` }}",
        "SSH_USERNAME={{ user `ssh_name` }}",
        "SSH_PASSWORD={{ user `ssh_pass` }}"
      ],
      "execute_command": "echo '{{ user `ssh_pass` }}' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "scripts": [
        "scripts/{{ user `ubuntu_version` }}/update.sh",
        "scripts/{{ user `ubuntu_version` }}/install_desktop.sh",
        "scripts/{{ user `ubuntu_version` }}/install_software.sh",
        "scripts/{{ user `ubuntu_version` }}/install_guest_additions.sh",
        "scripts/{{ user `ubuntu_version` }}/configure_sudo.sh",
        "scripts/{{ user `ubuntu_version` }}/cleanup.sh"
      ]
    },
    {
      "type": "shell",
      "environment_vars": [
        "ORG_NAME={{ user `org_name` }}"
      ],
      "scripts": [
        "scripts/{{ user `ubuntu_version` }}/install_software_no_root.sh",
        "scripts/{{ user `ubuntu_version` }}/copy_files.sh"
       ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "box/{{ user `org_name` }}.{{ user `version` }}.{{ user `ubuntu_version` }}.box",
        "vagrantfile_template": "Vagrantfile.template",
        "compression_level": 9
      },
      {
        "type": "vagrant-cloud",
        "access_token": "{{user `cloud_token`}}",
        "box_tag": "jhwohlgemuth/env",
        "version": "{{ user `version` }}"
      }
    ]
  ]
}
